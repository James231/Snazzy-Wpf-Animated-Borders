<UserControl x:Class="SnazzyWpfBorders.Components.BorderFade"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SnazzyWpfBorders.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="LayoutRoot">
    <Grid>
        <Grid x:Name="TopEdge" Opacity="0" VerticalAlignment="Top" Height="1" Background="{Binding BColor, ElementName=LayoutRoot}"></Grid>
        <Grid x:Name="LeftEdge" Opacity="0" HorizontalAlignment="Left" Width="1" Background="{Binding BColor, ElementName=LayoutRoot}"></Grid>
        <Grid x:Name="RightEdge" Opacity="0" HorizontalAlignment="Right" Width="1" Background="{Binding BColor, ElementName=LayoutRoot}"></Grid>
        <Grid x:Name="BottomEdge" Opacity="0" VerticalAlignment="Bottom" Height="1" Background="{Binding BColor, ElementName=LayoutRoot}"></Grid>
    </Grid>
</UserControl>
